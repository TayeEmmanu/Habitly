{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",               // must be one of the allowed values
    "moduleResolution": "node",       // node, node16, node18, nodenext are valid
    "jsx": "preserve",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*"]
}
